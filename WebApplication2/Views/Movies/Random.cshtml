

@model CalculateSimpleInterest.Models.Movies

@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script language="javascript">

        $(function () {
            $('#partial').on('change', '.updateevent', function (el) {
                $.ajax({
                    url: window.location.origin + "/Movies/UpdateViewData",
                    type: "post",
                    data: $("#partialform").serialize(),
                    success: function (result) {
                        $("#partial").html(result);
                    }
                });
            });
        });
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
}

<form id="partialform" asp-controller="Movies" asp-action="Random" method="post" data-ajax-loading="#spinner">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
        <h4 class="modal-title">This Sheit!</h4>

    </div>

    <div class="modal-body">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <select asp-for="Amount" class="form-control">
                <option value="">Choose</option>
                <optgroup label="1" />
                <option value="1">1</option>
                <optgroup label="2" />
                <option value="2">2</option>
            </select>
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">
            <input type="submit" value="Create" class="btn btn-info" id="sb" />
        </div>

    </div>
</form>

<div id="partial">
    <partial name="PartialMovie.cshtml" />
</div>

<div id="spinner" style="display:none;"><i class="fas fa-spinner fa-spin"></i></div>


