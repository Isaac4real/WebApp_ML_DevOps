@model WebApplication2ML.Model.ModelInput

@{
    ViewData["Title"] = "ViewAriBnB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script language="javascript">

        $(function () {
            $('#partial').on('change', '.updateevent', function (el) {
                $.ajax({
                    url: window.location.origin + "/PredictionAirBnBPrice/UpdateViewData",
                    type: "post",
                    data: $("#partialform").serialize(),
                    success: function (result) {
                        $("#partial").html(result);
                    }
                });
            });
        });
    </script>
}

<div style="padding:2vw;"></div>
<form id="partialform" asp-controller="PredictionAirBnBPrice" asp-action="ViewAirBnB" method="post" style="width:34vw;margin-left:-1vw">

    <div class="col-md-12">
        <div class="form-group row" style="flex-wrap:unset">
            <label class="col-sm-5 col-form-label font-weight-bold">Neighbourhood Group</label>
            <input list="neigroups" asp-for="Neighbourhood_group" class="form-control" placeholder="Pick the neighbourhood group" value="">
            <datalist id="neigroups">
                <option value="Lisboa"></option>
                <option value="Azambuja"></option>
                <option value="Cascais"></option>
                <option value="Sintra"></option>
                <option value="Alenquer"></option>
                <option value="Oeiras"></option>
                <option value="Vila Franca De Xira"></option>
                <option value="Mafra"></option>
                <option value="Torres Vedras"></option>
                <option value="Lourinh"></option>
                <option value="Loures"></option>
                <option value="Cadaval"></option>
                <option value="Amadora"></option>
                <option value="Sobral De Monte Agrao"></option>
            </datalist>
        </div>
        <div class="form-group row" style="flex-wrap:unset">
            <label class="col-sm-5 col-form-label font-weight-bold">Neighbourhood</label>
            <input list="neig" asp-for="Neighbourhood" class="form-control" placeholder="Pick the neighbourhood" value="">
            <datalist id="neig">
                <option value="Santa Maria Maior"></option>
                <option value="Aveiras de Cima"></option>
                <option value="Areeiro"></option>
                <option value="Estrela"></option>
                <option value="Avenidas Novas"></option>
                <option value="Campolide"></option>
                <option value="Barcarena"></option>
                <option value="Arroios"></option>
                <option value="Carcavelos e Parede"></option>
                <option value="Ericeira"></option>
                <option value="Venteira"></option>
                <option value="Ventosa"></option>
                <option value="Olivais"></option>
                <option value="Carvoeira"></option>
                <option value="Beato"></option>
                <option value="Alfragide"></option>
                <option value="Ramada e Caneas"></option>
                <option value="Ribamar"></option>
                <option value="Carnota"></option>
                <option value="Alcoentre"></option>
            </datalist>
        </div>
        <div class="form-group row" style="flex-wrap:unset">
            <label class="col-sm-5 col-form-label font-weight-bold">Type of Room</label>
            <input list="Room_type" asp-for="Room_type" class="form-control" placeholder="Pick the the type of room" value="" >
            <datalist id="Room_type">
                <option value="Entire home/apt"></option>
                <option value="Private room"></option>
                <option value="Shared room"></option>
                <option value="Hotel room"></option>
            </datalist>
        </div>
        <div class="form-group row" style="flex-wrap:unset">
            <label class="col-sm-5 col-form-label font-weight-bold">Minimum number of Nights</label>
            <input list="Minimum_nights" asp-for="Minimum_nights" class="form-control" placeholder="Choose the Minimum number of nights" value="">
