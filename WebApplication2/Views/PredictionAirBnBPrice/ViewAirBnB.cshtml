                <option value="9"></option>
                <option value="10"></option>
            </datalist>
        </div>
        <div class="form-group row" style="flex-wrap:unset">
            <label class="col-sm-5 col-form-label font-weight-bold">Number of Reviews</label>
            <input list="Number_of_reviews" asp-for="Number_of_reviews" class="form-control" placeholder="Pick the Number of Reviews" value="">
