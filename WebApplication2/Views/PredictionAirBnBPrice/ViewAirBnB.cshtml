            <label class="col-sm-5 col-form-label font-weight-bold">Availability (number of days per year)</label>
            <input id="avail" type="text" list="Availability_365" asp-for="Availability_365" class="form-control" placeholder="number of days" value="">
            <datalist id="Availability_365">
                <option value="365"></option>
                <option value="34"></option>
                <option value="165"></option>
                <option value="234"></option>
                <option value="101"></option>
                <option value="111"></option>
            </datalist>
        </div>

        <div class="form-group" style="padding:2vw" align="center">
            <input type="submit" value="Predict Price per night" class="btn btn-info" id="sb" style="font-size:0.8vw" />
        </div>
    </div>
</form>



<div id="partial" style="position:absolute;top:20vw;left:70vw">
    <partial name="PartialViewAirBnB.cshtml" />
</div>